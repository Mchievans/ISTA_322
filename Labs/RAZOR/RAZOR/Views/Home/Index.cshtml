@model Product

@{
    //Layout = "_BasicLayout";
    ViewBag.Title = "My Top Notch Products";
}

Product Name: @Model.Name

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1> This the Content of my page </h1>
    Product Price: @Model.Name<br />
    Product Price:@Model.Description<br />
    Product Price:@Model.Category<br />
    Product Price: @Model.ProductID<br />
    Product Price: @Model.Price<br />
    Product Price: @($"{Model.Price:C2}")<br />
    Stock Level: @ViewBag.StockLevel<br />
    Stock Level: @ViewBag.philosphy<br />
    Weight (in Pounds): @ViewBag.Weight <br />


                                        <div data-productid="@Model.ProductID" data-stocklevel="@ViewBag.StockLevel">
                                            <p>Product Name: @Model.Name</p>
                                            <p>Product Price: @($"{Model.Price:C2}")</p>
                                            <p>
                                                Stock Level:
                                                @if (ViewBag.StockLevel == 0)
                                                {
                                                    @:Out of Stock
                                                }
                                                else if (ViewBag.StockLevel > 0 && ViewBag.StockLevel <= 3)
                                                {
                                                    <b> Low Stock (@ViewBag.StockLevel) </b>
                                                }
                                                else
                                                {
                                                    @: @ViewBag.StockLevel in Stock
                                                }
                                            </p>

                                            <table>
                                                <thead>
                                                    <tr><th>Name</th><th>Price</th></tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (Product p in Model)
                                                    {
                                                        <tr>
                                                            <td>@p.Name</td>
                                                            <td>@($"{p.Price:C2}")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
</body>
</html>
